rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    // Helper function to check if user is active
    function isActive() {
      return isAuthenticated() && getUserData().status == 'active';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Users can create their own document during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Users can update their own document
      allow update: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read and update any user
      allow read, update: if hasRole('admin');
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read active products
      allow read: if resource.data.status == 'active' || hasRole('admin') || hasRole('manufacturer');
      // Only admins can create/update/delete products
      allow create, update, delete: if hasRole('admin');
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Customers can read their own orders
      allow read: if isAuthenticated() && resource.data.customerId == request.auth.uid;
      // Customers can create orders
      allow create: if isAuthenticated() && hasRole('customer');
      // Admins can read and update all orders
      allow read, update: if hasRole('admin');
      // Manufacturers can read orders assigned to them
      allow read: if hasRole('manufacturer') && isActive();
      // Manufacturers can update production status
      allow update: if hasRole('manufacturer') && isActive() 
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['productionStatus', 'productionNotes', 'updatedAt']);
      // Delivery partners can read orders assigned to them
      allow read: if hasRole('delivery') && isActive() && resource.data.assignedToDelivery == request.auth.uid;
      // Delivery partners can update tracking
      allow update: if hasRole('delivery') && isActive() && resource.data.assignedToDelivery == request.auth.uid
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'trackingUpdates', 'updatedAt']);
    }
    
    // Approval Requests collection
    match /approvalRequests/{requestId} {
      // Users can read their own requests
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Users can create approval requests
      allow create: if isAuthenticated();
      // Admins can read and update all requests
      allow read, update: if hasRole('admin');
    }
    
    // Raw Materials collection
    match /rawMaterials/{materialId} {
      // Manufacturers can read and update
      allow read, create, update: if hasRole('manufacturer') && isActive();
      // Admins can do everything
      allow read, create, update, delete: if hasRole('admin');
    }
    
    // Production Batches collection
    match /productionBatches/{batchId} {
      // Manufacturers can read and create batches
      allow read, create, update: if hasRole('manufacturer') && isActive();
      // Admins can read all batches
      allow read: if hasRole('admin');
    }
    
    // Website Content collection
    match /websiteContent/{document=**} {
      // Everyone can read
      allow read: if true;
      // Only admins can update
      allow create, update, delete: if hasRole('admin');
    }
  }
}
